{
    "model": {
        "description": "TxGNN-inspired model configuration for drug repurposing",
        "n_inp": 128,
        "n_hid": 128,
        "n_out": 128,
        "attention": false,
        "proto": true,
        "proto_num": 3,
        "sim_measure": "embedding",
        "agg_measure": "rarity",
        "exp_lambda": 0.7,
        "dropout": 0.1
    },
    "training": {
        "pretrain_epochs": 50,
        "finetune_epochs": 200,
        "pretrain_lr": 0.001,
        "finetune_lr": 0.0005,
        "batch_size": 1024,
        "weight_decay": 0.0,
        "patience": 20,
        "neg_ratio": 1,
        "print_every": 10,
        "eval_every": 20
    },
    "data": {
        "split": "random",
        "seed": 42,
        "train_ratio": 0.8,
        "valid_ratio": 0.1,
        "test_ratio": 0.1
    },
    "paths": {
        "data_folder": "./models/InputsAndOutputs",
        "triplets_file": "output/sampling_json_run_v1_sampled.json",
        "entity_linking_file": "output/entity_linking_results.json",
        "output_dir": "output/prediction",
        "model_file": "model.pt",
        "cache_dir": "cache/prediction"
    },
    "prediction": {
        "default_relation": "treatment_for",
        "top_k": 20,
        "exclude_known": true
    },
    "evaluation": {
        "metrics": ["mrr", "hits@1", "hits@5", "hits@10", "hits@20", "auroc", "auprc"],
        "disease_centric": true,
        "drug_centric": true,
        "zero_shot": true,
        "filtered": true
    },
    "notes": {
        "reference": "TxGNN: Zero-shot prediction of therapeutic use with geometric deep learning (Nature Medicine 2024)",
        "github": "https://github.com/mims-harvard/TxGNN",
        "description": "This module implements drug-disease link prediction for drug repurposing in mental health disorders, following TxGNN methodology with adaptations for MDKG data."
    }
}
